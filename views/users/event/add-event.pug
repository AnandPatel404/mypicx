extends ../../layout/users
block content 
    .d-flex.align-items-center.justify-content-between.gap-2.mb-4.flex-wrap
        div 
            nav(aria-label="breadcrumb")
                ol.breadcrumb.mb-0.p-0
                    li.breadcrumb-item
                        a(href="/users/dashboard") Dashboard
                    li.breadcrumb-item
                        a(href="/users/events") Events
                    li.breadcrumb-item.active(aria-current="page") Add Events 



    .row
        .col-xl-12
            .card
                .card-header
                    h5.card-title Add New Event
                .card-body
                    .row
                        .col-lg-12
                            .d-flex.align-items-center.mb-3
                                .avatar.avatar-xxl.border.border-dashed.me-3.flex-shrink-0
                                    .position-relative.d-flex.align-items-center
                                        i.ti.ti-photo.text-dark.fs-16
                                .d-inline-flex.flex-column.align-items-start
                                    .drag-upload-btn.btn.btn-sm.btn-primary.position-relative.mb-2
                                        i.ti.ti-file-broken.me-1
                                        | Upload file
                                        input.form-control.image-sign(type="file" multiple)
                                    span Add Cover Image
                        .col-lg-4
                            .mb-3
                                label.form-label(for="input-label") Event Name
                                input.form-control(type="text" placeholder="Enter Event Name")
                        .col-lg-4
                            .mb-3
                                label.form-label(for="input-datetime-local") Type Datetime Local
                                input.form-control(type="datetime-local" id="input-datetime-local")  
                        .col-lg-4
                            .mb-3  
                                label.form-label Event Type 
                                    span.text-danger *  
                                select.select
                                    option Choose
                                    option Germany
                                    option USA
                                    option Canada
                                    option India
                                    option China
                        .col-12 
                            .mb-3 
                                .form-check.form-switch.mb-2
                                    input.form-check-input(type="checkbox" role="switch" id="switchCheckDefault")
                                    label.form-check-label(for="switchCheckDefault") Guests will receive E-mail when they register on event and when event is published
                        .col-12 
                            hr
                        .col-12 
                            .d-flex.align-items-center.justify-content-end
                                a.btn.btn-light.me-2(href="#") Cancel
                                button.btn.btn-primary(type="submit") Create Event