extends ../../layout/users
block content 
	.d-flex.align-items-center.justify-content-between.gap-2.mb-4.flex-wrap
		div 
			nav(aria-label="breadcrumb")
				ol.breadcrumb.mb-0.p-0
					li.breadcrumb-item
						a(href="/users/dashboard") Dashboard
					li.breadcrumb-item
						a(href="/users/event") Events
					li.breadcrumb-item.active(aria-current="page") Add Events
	.row
		.col-xl-12
			.card
				.card-header
					h5.card-title Add event
				.card-body
					form.create_branding_form(action="/branding" method="POST").row
						.col-lg-12
							.dropzone.custom-drop-zon.mb-3
								.fallback
									input(type="file" name="brand_logo")
								.dz-message.needsclick
									i.ti.ti-cloud-upload.h1.text-muted
									h3 Drop files here or click to upload.
									span.text-muted.fs-13
										| (This is just a demo dropzone. Selected files are 
										strong not
										|  actually uploaded.)
						.col-lg-4
							.mb-3
								label.form-label(for="input-label") Name
								input.form-control(type="text" placeholder="Enter Name" name="name")
						.col-lg-4
							.mb-3
								label.form-label(for="input-datetime-local") Starting date
								input.form-control(type="date" name="start_date" value=moment().format("YYYY-MM-DD"))
						.col-lg-4
							.mb-3
								label.form-label(for="input-datetime-local") Ending date
								input.form-control(type="date" value=moment().format("YYYY-MM-DD"))
						.col-lg-4
							.mb-3  
								label.form-label Event Type 
									span.text-danger *  
								select.select
									option(value='') Choose...
									each type in event_types
										option(value=type)=convert_name(type)
						.col-lg-4
							.mb-3  
								label.form-label Event Branding
									span.text-danger *
								select.select(name="branding_id")
									option(value="") Choose...
									each item in all_branding
										option(value=item.id) #{item.name}
						.col-12 
							.d-flex.align-items-center.justify-content-end
								a.btn.btn-light.me-2(href="/users/events") Cancel
								button.btn.btn-primary(type="submit") Create Event
block js
	script(src="/javascripts/event.js?ver=1.0.2")