extends ../layout/users
block content 
    .d-flex.align-items-center.justify-content-between.gap-2.mb-4.flex-wrap
        div 
            nav(aria-label="breadcrumb")
                ol.breadcrumb.mb-0.p-0
                    li.breadcrumb-item
                        a(href="/users/dashboard") Dashboard 
                    li.breadcrumb-item.active(aria-current="page") Profile



    .row
        .col-xl-3.col-lg-12.theiaStickySidebar
            .card.mb-3.mb-xl-0
                .card-body
                    .settings-sidebar
                        h5.mb-3.fs-17 General Settings
                        .list-group.list-group-flush.settings-sidebar
                            a.d-block.p-2.fw-medium.active(href="/users/profile") Profile
                            a.d-block.p-2.fw-medium(href="/users/security") Security
                            a.d-block.p-2.fw-medium(href="/users/activity") Activity 

        .col-xl-9.col-lg-12
            .card.mb-0
                .card-body
                    .border-bottom.mb-3.pb-3
                        h5.mb-0.fs-17 Profile

                    form(action="") 

                        .mb-3
                            .profile-upload.d-flex.align-items-center
                                .profile-upload-img.avatar.avatar-xxl.border.border-dashed.rounded.position-relative.flex-shrink-0
                                    span
                                        i.ti.ti-photo
                                    img#ImgPreview.preview1(src="assets/img/profiles/avatar-02.jpg" alt="img")
                                    a#removeImage1.profile-remove(href="javascript:void(0);")
                                        i.ti.ti-x
                                .profile-upload-content.ms-3
                                    label.d-inline-flex.align-items-center.position-relative.btn.btn-primary.btn-sm.mb-2
                                        i.ti.ti-file-broken.me-1
                                        | Upload File
                                        input#imag.input-img.position-absolute.w-100.h-100.opacity-0.top-0.end-0(type="file")
                                    p.mb-0 JPG, GIF or PNG. Max size of 800K

                        .border-bottom.mb-3
                            .row
                                .col-md-4
                                    .mb-3
                                        label.form-label
                                            | First Name 
                                            span.text-danger *
                                        input.form-control(type="text" placeholder="Enter Your Name")

                                .col-md-4
                                    .mb-3
                                        label.form-label
                                            | Phone Number 
                                            span.text-danger *
                                        input.form-control(type="text" placeholder="Phone Number")

                                .col-md-4
                                    .mb-3
                                        label.form-label
                                            | Email 
                                            span.text-danger *
                                        input.form-control(type="text" placeholder="Enter Your Email")


                                .col-md-12
                                    .mb-3
                                        label.form-label Address
                                        input.form-control(type="text" placeholder="Enter Your Address")

                                .col-lg-6.col-md-6
                                    .mb-3
                                        label.form-label Country
                                        select.select
                                            option United States
                                            option Canada
                                            option Germany
                                            option France

                                .col-lg-6.col-md-6
                                    .mb-3
                                        label.form-label State / Province
                                        select.select
                                            option California
                                            option New York
                                            option Texas
                                            option Florida

                                .col-lg-6.col-md-6
                                    .mb-3
                                        label.form-label City
                                        select.select
                                            option Los Angeles
                                            option San Diego
                                            option Fresno
                                            option San Francisco

                                .col-lg-6.col-md-6
                                    .mb-3
                                        label.form-label Pin Code
                                        input.form-control(type="text" placeholder="Pin Code")

                        .d-flex.align-items-center.justify-content-end.flex-wrap.gap-2
                            a.btn.btn-sm.btn-light(href="#") Cancel
                            button.btn.btn-sm.btn-primary(type="submit") Save Changes