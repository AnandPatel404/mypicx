extends ../../layout/users
block content 
	.d-flex.align-items-center.justify-content-between.gap-2.mb-4.flex-wrap
		div 
			nav(aria-label="breadcrumb")
				ol.breadcrumb.mb-0.p-0
					li.breadcrumb-item
						a(href="/users/dashboard") Dashboard
					li.breadcrumb-item
						a(href="/users/branding") Events
					li.breadcrumb-item.active(aria-current="page") Add Events 
	.row
		.col-xl-12
			.card
				.card-header
					h5.card-title Add Branding
				.card-body
					form.create_branding_form(action="/branding" method="POST").row
						.col-lg-12
							.mb-3 
								label.form-label(for="input-label") Upload Logo
								input.form-control(type="file"  name="brand_logo")
							//- .dropzone.custom-drop-zon.mb-3
							//- 	.fallback
							//- 		input(type="file" name="brand_logo")
							//- 	.dz-message.needsclick
							//- 		i.ti.ti-cloud-upload.h1.text-muted
							//- 		h3 Drop files here or click to upload.
							//- 		span.text-muted.fs-13
							//- 			| (This is just a demo dropzone. Selected files are 
							//- 			strong not
							//- 			|  actually uploaded.)
						.col-lg-4
							.mb-3
								label.form-label(for="input-label") Name
								input.form-control(type="text" placeholder="Enter Name" name="name")
						.col-lg-4
							.mb-3
								label.form-label(for="input-label") Email
								input.form-control(type="email" placeholder="Enter Email" name="contact_email")
						.col-lg-4
							.mb-3
								label.form-label(for="input-label") Tagline
								input.form-control(type="text" placeholder="Enter tagline" name="tagline")
						.col-lg-12
							.mb-3
								label.form-label(for="input-label") About us
								textarea.form-control(placeholder="Enter about us" name="about_us")
						.col-lg-12
							.mb-3
								label.form-label(for="input-label") Address
								textarea.form-control(placeholder="Enter address" name="address")
						.col-lg-4
							.mb-3
								label.form-label(for="input-label") Contact number
								input.form-control(type="text" placeholder="Enter Contact number" name="contact_number")
						.col-lg-4
							.mb-3
								label.form-label(for="input-label") Whatsapp number
								input.form-control(type="text" placeholder="Enter whatsapp number" name="whatsapp")
						.col-lg-4
							.mb-3
								label.form-label(for="input-label") Website
								.d-flex
									.btn.btn-primary.btn-md.btn-icon.position-relative.me-1
										i.ti.ti-unlink
									input.form-control(type="url" placeholder="Enter website url" name="website")
						.col-lg-4
							.mb-3
								label.form-label(for="input-label") Facebook
								.d-flex
									.btn.btn-primary.btn-md.btn-icon.position-relative.me-1
										i.ti.ti-brand-facebook
									input.form-control(type="url" placeholder="Enter facebook url" name="facebook")
						.col-lg-4
							.mb-3
								label.form-label(for="input-label") Instagram
								.d-flex
									.btn.btn-primary.btn-md.btn-icon.position-relative.me-1
										i.ti.ti-brand-instagram
									input.form-control(type="url" placeholder="Enter instagram url" name="instagram")
						.col-lg-4
							.mb-3
								label.form-label(for="input-label") YouTube
								.d-flex
									.btn.btn-primary.btn-md.btn-icon.position-relative.me-1
										i.ti.ti-brand-youtube
									input.form-control(type="url" placeholder="Enter youtube url" name="youtube")
						.col-lg-4
							.mb-3
								label.form-label(for="input-label") Linkedin Page 
								.d-flex
									.btn.btn-primary.btn-md.btn-icon.position-relative.me-1
										i.ti.ti-brand-linkedin
									input.form-control(type="url" placeholder="Enter linkedin url" name="linkedin")
						.col-lg-4
							.mb-3
								label.form-label(for="input-label") Twitter 
								.d-flex
									.btn.btn-primary.btn-md.btn-icon.position-relative.me-1
										i.ti.ti-brand-x
									input.form-control(type="url" placeholder="Enter twitter url" name='x')
						.col-lg-4
							.mb-3
								label.form-label(for="input-label") Snapchat
								.d-flex
									.btn.btn-primary.btn-md.btn-icon.position-relative.me-1
										i.ti.ti-brand-x
									input.form-control(type="url" placeholder="Enter snapchat url" name='snapchat')
						.col-lg-4
							.mb-3
								label.form-label(for="input-label") Tiktok
								.d-flex
									.btn.btn-primary.btn-md.btn-icon.position-relative.me-1
										i.ti.ti-brand-x
									input.form-control(type="url" placeholder="Enter tiktok url" name='tiktok')
						.col-12 
							.mb-3 
								.form-check.mb-1
									input.form-check-input(type="checkbox" id="MakeDefault" name="default")
									label.form-check-label.ms-1(for="MakeDefault") Make Default

						.col-12 
							.d-flex.align-items-center.justify-content-end
								a.btn.btn-light.me-2(href="/users/branding") Cancel
								button.btn.btn-primary(type="submit") Create Event
block js
	script(src="/javascripts/branding.js?ver=1.0.2")