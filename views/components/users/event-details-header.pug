header.navbar-header
	.page-container.topbar-menu
		.d-flex.align-items-center.gap-2
			//- Logo
			a.logo(href="#")
				//- Logo Normal
				span.logo-light
					span.logo-lg
						img(src="/assets/img/logo.svg" alt="logo")
					span.logo-sm
						img(src="/assets/img/logo-small.svg" alt="small logo")

				//- Logo Dark
				span.logo-dark
					span.logo-lg
						img(src="/assets/img/logo-white.svg" alt="dark logo")

			//- Sidebar Mobile Button
			a#mobile_btn.mobile-btn(href="#sidebar")
				i.ti.ti-menu-deep.fs-24

			button#toggle_btn2.sidenav-toggle-btn.btn.border-0.p-0
				i.ti.ti-arrow-bar-to-right

			//- Search
			.me-auto.d-flex.align-items-center.header-search.d-lg-flex
				h4.m-0 #{user.event_name}

		.d-flex.align-items-center


			//- Fullscreen
			.header-item
				.dropdown.me-2
					button.btn.topbar-link(
						type="button"
						data-bs-toggle="modal"
						data-bs-target="#UploadModel"
					)
						i.ti.ti-upload
				.dropdown.me-2
					a.btn.topbar-link(href="/users/share")
						i.ti.ti-share 
			.dropdown.profile-dropdown.d-flex.align-items-center.justify-content-center
				a.topbar-link.dropdown-toggle.drop-arrow-none.position-relative(
					href="javascript:void(0);"
					data-bs-toggle="dropdown"
					data-bs-offset="0,22"
				)
					img.rounded-1(src="/assets/img/users/user-40.jpg" width="38" alt="user-image")
					span.online.text-success
						i.ti.ti-circle-filled.bg-white.rounded-circle.border.border-1

				.dropdown-menu.dropdown-menu-end.dropdown-menu-md.p-2
					.d-flex.align-items-center.bg-light.rounded-3.p-2.mb-2
						img.rounded-circle(src="/assets/img/users/user-40.jpg" width="42" height="42")
						.ms-2
							p.fw-medium.text-dark.mb-0 Katherine Brooks
							span.fs-13 Installer

					a.dropdown-item(href="#")
						i.ti.ti-user-circle.me-1
						| Profile Settings 

					.pt-2.mt-2.border-top
						a.dropdown-item.text-danger(href="#")
							i.ti.ti-logout.me-1.fs-17
							| Sign Out